<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kalimantan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.nurulafrianti.indonesiatourism.Kalimantan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageKalimantan1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pangkalanbun"
                    />

                <TextView
                    android:id="@+id/judulKalimantan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PANGKALAN BUN, A SPECIAL CITY WITH A NOSTALGIC FEELING"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@id/imageKalimantan1"
                    android:background="#C8E6C9"
                    />

                <TextView
                    android:id="@+id/descKalimantan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_kalimantan1"
                    android:layout_below="@id/judulKalimantan1"
                    android:background="#C8E6C9"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    />

                <ImageView
                    android:id="@+id/imageKalimantan2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/derawan"
                    android:layout_below="@id/descKalimantan1"
                    />

                <TextView
                    android:id="@+id/judulKalimantan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DERAWAN ISLANDS, THE PERFECT TROPICAL PARADISE"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@id/imageKalimantan2"
                    android:background="#C8E6C9"
                    />

                <TextView
                    android:id="@+id/descKalimantan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_kalimantan2"
                    android:layout_below="@id/judulKalimantan2"
                    android:background="#C8E6C9"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    />

                <ImageView
                    android:id="@+id/imageKalimantan3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tarakan"
                    android:layout_below="@id/descKalimantan2"
                    />

                <TextView
                    android:id="@+id/judulKalimantan3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TARAKAN, THE SMALL MARSHY TOWN WITH STRONG HISTORICAL WONDERS"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@id/imageKalimantan3"
                    android:background="#C8E6C9"
                    />

                <TextView
                    android:id="@+id/descKalimantan3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_kalimantan3"
                    android:layout_below="@id/judulKalimantan3"
                    android:background="#C8E6C9"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    />

                <ImageView
                    android:id="@+id/imageKalimantan4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banjarmasin"
                    android:layout_below="@id/descKalimantan3"
                    />

                <TextView
                    android:id="@+id/judulKalimantan4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BANJARMASIN, THE CITY OF THOUSAND RIVERS"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@id/imageKalimantan4"
                    android:background="#C8E6C9"
                    />

                <TextView
                    android:id="@+id/descKalimantan4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_kalimantan4"
                    android:layout_below="@id/judulKalimantan4"
                    android:background="#C8E6C9"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    />

                <ImageView
                    android:id="@+id/imageKalimantan5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pontianak"
                    android:layout_below="@id/descKalimantan4"
                    />

                <TextView
                    android:id="@+id/judulKalimantan5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PONTIANAK, CITY ON THE EQUATOR LINE"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@id/imageKalimantan5"
                    android:background="#C8E6C9"
                    />

                <TextView
                    android:id="@+id/descKalimantan5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_kalimantan5"
                    android:layout_below="@id/judulKalimantan5"
                    android:background="#C8E6C9"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
